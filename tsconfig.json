{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDirs": ["./src", "./"],
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": false,
  },
  "include": ["**/*", "./src/firebase-key.json"],
  "exclude": ["node_modules", "__tests__", "jest.*", "build", "**/*spec.ts", "dist"]
}
