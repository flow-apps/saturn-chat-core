{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDirs": ["./src", "./"],
    "skipLibCheck": true,
    "removeComments": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
  },
  "exclude": ["node_modules", "__tests__", "jest.*", "build", "**/*spec.ts", "dist"]
}
